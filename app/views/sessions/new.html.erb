<%# Simple card template from https://tailwindui.com/components/application-ui/forms/sign-in-forms#component-bc08eb211afa45fad7c9f89c1891f284 %>
<div class="min-h-full flex flex-col py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
      <%= t '.log_in' %>
    </h2>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= form_tag login_path, class: 'space-y-6' do %>
        <div>
          <div class="mt-1">
            <%= email_field_tag :email, @user.email, placeholder: t('.email'), autofocus: true, class: 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-900 focus:border-blue-900 sm:text-sm' %>
          </div>
        </div>

        <div>
          <div class="mt-1">
            <%= password_field_tag :password, nil, placeholder: t('.password'), class: 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-900 focus:border-blue-900 sm:text-sm' %>
          </div>
        </div>

        <div>
          <%= submit_tag t('.log_in'), class: 'w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-900 hover:bg-blue-800 cursor-pointer focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-900' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
