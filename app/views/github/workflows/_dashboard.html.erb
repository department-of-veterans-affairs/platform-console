<% if all_workflows.present? %>
  <div class="h-full flex">
    <!-- Static sidebar for desktop -->
    <div class="hidden lg:flex lg:flex-shrink-0">
      <div class="flex flex-col w-64">
        <!-- Sidebar component, swap this element with another sidebar if you like -->
        <div class="flex-1 flex flex-col min-h-0 border-r border-gray-200 bg-white">
          <div class="flex-1 flex flex-col pt-5 pb-4 overflow-y-auto">
            <nav class="mt-5 flex-1" aria-label="Sidebar">
              <div class="px-2 space-y-1">
                <%= link_to 'Dispatch a Workflow', new_dispatch_team_app_github_repository_workflows_path(@team, @app, @app.github_repo_slug), title: 'Dispatch Workflow', class: 'inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-800 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 mb-5' %>
                <div class="relative">
                  <div class="absolute inset-0 flex items-center" aria-hidden="true">
                    <div class="w-full border-t border-gray-300"></div>
                  </div>
                </div>
                <!-- Current: "bg-gray-200 text-gray-900", Default: "text-gray-600 hover:bg-gray-50 hover:text-gray-900" -->
                <% current_css = 'bg-gray-200 text-gray-900 group flex items-center px-2 py-2 text-md font-medium rounded-md' %>
                <% default_css = 'text-gray-600 hover:bg-gray-50 hover:text-gray-900 group flex items-center px-2 py-2 text-md font-medium rounded-md' %>
                <%= link_to team_app_github_repository_workflows_path(@team, @app, @app.github_repo_slug), class: current_workflow.nil? ? current_css : default_css do%>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                  </svg>
                  All Workflows
                  <% end %>
                <% all_workflows[:workflows].each do |workflow|%>
                  <%= link_to workflow[:name], team_app_github_repository_workflow_path(@team, @app, @app.github_repo_slug, workflow[:id]), class: current_workflow.present? && current_workflow[:id] == workflow[:id] ? current_css : default_css  %>
                <% end %>
              </div>
            </nav>
          </div>
        </div>
      </div>
    </div>
    <div class="flex flex-col min-w-0 flex-1 overflow-hidden">
      <div class="flex-1 relative z-0 flex overflow-hidden">
        <main class="flex-1 relative z-0 overflow-y-auto focus:outline-none xl:order-last">
          <% if workflow_runs[:workflow_runs].present? %>
            <div class="flex justify-between">
              <h3 class="text-2xl leading-7 text-gray-900 text-md sm:truncate mt-4 ml-4 mb-4">
                <%= number_with_delimiter(workflow_runs[:total_count], delimiter: ',') %> workflow runs
              </h3>
            </div>
            <div class="flex flex-col">
              <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
                  <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
                    <table class="min-w-full divide-y divide-gray-200">
                      <thead class="bg-gray-50">
                        <tr>
                          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Started</th>
                          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                          <th scope="col" class="relative px-6 py-3">
                            <span class="sr-only">Edit</span>
                          </th>
                        </tr>
                      </thead>
                      <tbody class="bg-white divide-y divide-gray-200">
                        <% workflow_runs[:workflow_runs].each do |run| %>
                        <tr>
                          <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                              <div class="ml-4">
                                <% if run[:event] == 'pull_request' && run[:pull_requests].present? %>
                                  <div class="text-md font-medium text-gray-900"><%= "Pull Request ##{run[:pull_requests].first[:number]}" %></div>
                                  <div class="text-sm text-gray-500"><%= "#{run[:name]} ##{run[:run_number]}: Pull Request ##{run[:pull_requests].first[:number]}" %></div>
                                <% elsif run[:event] == 'push'%>
                                  <div class="text-md font-medium text-gray-900"><%= truncate(run[:head_commit][:message], length: 50) %></div>
                                  <div class="text-sm text-gray-500"><%= "#{run[:name]} ##{run[:run_number]}: Commit: #{ run[:head_sha].first(7) }" %></div>
                                <% else %>
                                  <div class="text-md font-medium text-gray-900"><%= run[:name] %></div>
                                  <div class="text-sm text-gray-500"><%= "#{run[:name]} ##{run[:run_number]}"%></div>
                                <% end %>
                              </div>
                            </div>
                          </td>

                          <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-left">
                              <div class="ml-4">
                                <div class="text-md font-medium text-gray-500"><%= distance_of_time_in_words(Time.now, run[:created_at]) %> ago</div>
                              </div>
                            </div>
                          </td>

                          <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                          <span>
                            <div class="flex items-center">
                              <% if run[:conclusion] == 'success' %>
                                <!-- Heroicon name: solid/check-circle -->
                                <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                </svg>
                              <% elsif run[:conclusion] == 'failure' %>
                                  <!-- Heroicon name: solid/x -->
                                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                                  </svg>
                              <% elsif run[:conclusion] == 'cancelled' %>
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                              <% else %>
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd" />
                                </svg>
                              <% end %>
                            </div>
                            </span>
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <div class="flex space-x-2">
                              <%= link_to 'View', team_app_github_repository_workflow_workflow_run_path(@team, @app, @app.github_repo_slug, run[:workflow_id], run[:id] ), title: 'View Workflow Runs', class: 'inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-800 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
                            </div>
                          </td>
                        </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </main>
      </div>
    </div>
  </div>

  <% if current_workflow.present? %>
     <%= render 'github/pagination', curr_path: team_app_github_repository_workflow_path(@team, @app, @app.github_repo_slug, current_workflow.id, page: @curr_page),
                                    first_path: team_app_github_repository_workflow_path(@team, @app, @app.github_repo_slug, current_workflow.id, page: @first_page),
                                    last_path: team_app_github_repository_workflow_path(@team, @app, @app.github_repo_slug, current_workflow.id, page: @last_page),
                                    next_path: team_app_github_repository_workflow_path(@team, @app, @app.github_repo_slug, current_workflow.id, page: @next_page),
                                    prev_path: team_app_github_repository_workflow_path(@team, @app, @app.github_repo_slug, current_workflow.id, page: @prev_page) %>
  <% else %>
    <%= render 'github/pagination', curr_path: team_app_github_repository_workflows_path(@team, @app, @app.github_repo_slug, page: @curr_page),
                                    first_path: team_app_github_repository_workflows_path(@team, @app, @app.github_repo_slug, page: @first_page),
                                    last_path: team_app_github_repository_workflows_path(@team, @app, @app.github_repo_slug, page: @last_page),
                                    next_path: team_app_github_repository_workflows_path(@team, @app, @app.github_repo_slug, page: @next_page),
                                    prev_path: team_app_github_repository_workflows_path(@team, @app, @app.github_repo_slug, page: @prev_page) %>
  <% end %>
<% end %>
